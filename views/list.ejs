<div class="container">
    <h1 class="display-4 mb-5">Ideas</h1>
    <div id="details">
            <table class="table table-striped table-dark table-hover">
            <thead>
                <tr>
                <th scope="col">_id</th>
                <th scope="col">Title</th>
                <!-- <th scope="col"></th>
                <th scope="col"></th> -->
                <th scope="col">Body</th>
                </tr>
            </thead>
            <tbody>
                <% ideas.forEach((idea) =>{ %>
                <tr>
                <th scope="row"><%= idea.id %></th>
                <!-- <th>|</th> -->
                <td><%= idea.title %></td>
                <!-- <th>|</th>                 -->
                <td><%= idea.body %></td>
                    <td>
                        <a href="/ideas/edit/<%= idea.id %>" class="btn btn-info">Edit</a>
                        <form class="d-inline" action="/ideas/delete/<%= idea.id %>" method="POST">
                            <input type="submit" value="DELETE" class="btn btn-danger">
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
            </table>
        </div>

</div>
